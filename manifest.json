{
    "name": "Switch White & Dark Twitter",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Automatically switch between dark and white Twitter themes depending on the current Windows theme.",
    "content_scripts": [
        {
        "matches": [
            "*://twitter.com/*"
        ],
        "js": [
            "main.js"
        ],
        "run_at": "document_start"
        }
    ],
    "permissions": [
        "*://twitter.com/*",
        "cookies"
    ]
}